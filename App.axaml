<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="OpenccNetLibGui.App"
             xmlns:helpers="clr-namespace:OpenccNetLibGui.Helpers"
             RequestedThemeVariant="Default">
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <helpers:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://AvaloniaEdit/Themes/Fluent/AvaloniaEdit.xaml" />

        <!-- Primary / Ancient Button -->
        <Style Selector="Button.accent-button">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundAccentBrush}" />
            <!-- <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}" /> -->
            <!-- Force white text in both Light & Dark -->
            <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundChromeWhiteBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource SystemControlBackgroundAccentBrush}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="12 6" />
        </Style>

        <Style Selector="Button.accent-button:pointerover">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundAccentMediumBrush}" />
        </Style>

        <Style Selector="Button.accent-button:pressed">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundAccentDarkBrush}" />
        </Style>

        <!-- Secondary / Outline Button -->
        <Style Selector="Button.outline-button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseHighBrush}" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="12 6" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <Style Selector="Button.outline-button:pointerover">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundBaseLowBrush}" />
        </Style>

        <Style Selector="Button.outline-button:pressed">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundBaseMediumBrush}" />
        </Style>

        <!-- åŒ…ä½ TextEditor çš„å¤–å±¤å®¹å™¨ -->
        <Style Selector="Border.editor-container">
            <!-- èƒŒæ™¯ï¼šç•¥æ·ºä¸€å±¤ï¼Œä»¤ TextEditor å€åŸŸåŒçª—é«”åˆ†å±¤ -->
            <Setter Property="Background"
                    Value="{DynamicResource SystemControlBackgroundAltHighBrush}" />

            <!-- é‚Šæ¡†ï¼šFluent 2 å¼å¾®å°æ¯”ç°ç·š -->
            <Setter Property="BorderBrush"
                    Value="{DynamicResource SystemControlForegroundBaseLowBrush}" />
            <Setter Property="BorderThickness" Value="3" />

            <!-- åœ“è§’ + å…§é‚Šè· -->
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="4" />

            <!-- ä»¤å…§å®¹ï¼ˆTextEditorï¼‰å””è²¼é‚Šï¼Œå‘¼å¸ç©ºé–“å¥½å•² -->
        </Style>
    </Application.Styles>

    <Application.Resources>
        <ResourceDictionary>
            <!-- Theme-specific resources live here -->
            <ResourceDictionary.ThemeDictionaries>

                <!-- ðŸŒž Light theme: use regular outline icons -->
                <ResourceDictionary x:Key="Light">
                    <Svg x:Key="Icon.Add"
                         Path="avares://OpenccNetLibGui/Assets/Icons/Fluent/ic_fluent_add_circle_24_regular.svg"
                         Width="20"
                         Height="20"
                         Stretch="Uniform" />

                    <Svg x:Key="Icon.Remove"
                         Path="avares://OpenccNetLibGui/Assets/Icons/Fluent/ic_fluent_subtract_circle_24_regular.svg"
                         Width="20"
                         Height="20"
                         Stretch="Uniform" />
                </ResourceDictionary>

                <!-- ðŸŒš Dark theme: swap to filled versions -->
                <ResourceDictionary x:Key="Dark">
                    <Svg x:Key="Icon.Add"
                         Path="avares://OpenccNetLibGui/Assets/Icons/Fluent/ic_fluent_add_circle_24_dark.svg"
                         Width="20"
                         Height="20"
                         Stretch="Uniform" />

                    <Svg x:Key="Icon.Remove"
                         Path="avares://OpenccNetLibGui/Assets/Icons/Fluent/ic_fluent_subtract_circle_24_dark.svg"
                         Width="20"
                         Height="20"
                         Stretch="Uniform" />
                </ResourceDictionary>

            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>

</Application>